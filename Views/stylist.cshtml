@{
  Layout="Shared/_Layout.cshtml";
}

@if (@Model.Count == 0)
{
  <p>No clients have been added for this stylist yet!</p>
}
else
{
<h2>Clients for @Model["stylist"].GetName():</h2>

@foreach (var client in Model["stylist"].GetClients())
{
    <h3>@client.GetName()</h3>
}
 }
<h3><a href="/clients/new">Add New</a> | <a href="/">Return Home</a></h3>
