@{
Layout="Shared/_Layout.cshtml";
}

<h2>Add A New Client</h2>
<form action="/clients/new" method="post">
    <div class="form-group">
        <label for="client-name">Client Name
        <input id="client-name" name="client-name" type="text"></label>
    </div>
    <div class="form-group">
        <label for="client-phone">Client Phone Number
        <input id="client-phone" name="client-phone" type="text"></label>
    </div>
    <div class="form-group">
        <label for="client-stylist">Stylist Name:
        <select name="stylist-id">
            @foreach (var stylist in Model)
            {
                <option value="@stylist.GetId()">@stylist.GetName()</option>
            }
        </select>
        </label>
    </div>
<button class="btn btn-lg btn-primary" type="submit">Add</button>
</form>

<h3><a href="/clients">View All</a> | <a href="/">Return home</a></h3>
